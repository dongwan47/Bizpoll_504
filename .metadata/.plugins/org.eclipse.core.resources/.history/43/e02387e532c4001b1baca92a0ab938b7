				System.out.println("꽃 잎개수");
				String numberOfLeaves = scan.nextLine();
				System.out.println("꽃 개화기");
				String bloom = scan.nextLine();
				System.out.println("꽃 수고");
				String plantLength = scan.nextLine();
				
			} else if (flowerInfo == 2) {

			} else if (flowerInfo == 3) {
				System.exit(0);
			}
		}
	}
